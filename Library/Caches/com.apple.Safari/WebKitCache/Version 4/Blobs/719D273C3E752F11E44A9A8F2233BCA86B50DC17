<script>
    $(document).ready(function() {

    });
    var timer;
    function resetTimer()
    {
        $("#mdtimer span").text(10);
        $("#makingdifferenttimer").removeAttr('href').hide();
        $("#mdtimer").hide();
        //setTimer();
    }

    function setTimer()
    {
        $("#mdtimer").show();
        var sec = 10
        clearInterval(timer);
        timer = setInterval(function() {
            $('#mdtimer span').text(sec--);
            if (sec == -1) {
                $("#makingdifferenttimer").delay(1000).fadeIn(1000);
                $("#mdtimer").hide(1000);
                clearInterval(timer);
            }
        }   , 1000);
    }
    function shareState(data) {
        if (data.action == "shared" && data.status == "completed") {
            makeGoogleApiCalls();
            downloadCode();
        }
    }
    // Live : 787135804717832
    // Local : 303777032969255
    window.fbAsyncInit = function() {
        FB.init({
            appId      : '303777032969255',
            xfbml      : true,
            version    : 'v2.4'
        });
        //FB.Canvas.setAutoGrow();
    };
    (function(d, s, id){
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {return;}
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
    function myFacebookLogin() {
        FB.getLoginStatus(function(response) {
            if (response.status === 'connected') {
                var uid = response.authResponse.userID;
                var accessToken = response.authResponse.accessToken;
                shareOnFB();
            } else {
                loginWithFB();
            }
        });
    }

    function loginWithFB()
    {
        FB.login(function(response) {
            if (response.authResponse) {
                shareOnFB();
            } else {
                console.log('User cancelled login or did not fully authorize.');
            }
        }, {scope: 'publish_actions,email,user_likes'});
    }

    function getOnFB()
    {
        FB.api('/me',{fields: 'email,name,gender,hometown,address,age_range,birthday'}, function(response) {
            var pathArray = window.location.href.split( '/' );
            var blog_slug = pathArray[eval(pathArray.length - 1)];
            var userInfo = {
                'social_id' : response.id,
                'social_type' : "facebook",
                'name' : response.name,
                'email':response.email,
                'slug' : blog_slug,
                'age_range':response.age_range.min
            };
            downloadUser(userInfo);
        });
    }
    function shareOnFB() {
        var e = {
            method: "feed",
            link: "http://www.theappguruz.com/blog/use-sqlite-database-swift?utm_source=facebook&utm_medium=share&utm_campaign=blog",
            picture: $("#blog_banner_img").attr("src"),
            name: $("meta[name='title']").attr('content'),
            caption: 'www.theappguruz.com',
            description: $("meta[name='description']").attr('content')
        };
        FB.ui(e, function(t) {
            if (t != undefined && t["post_id"]) {
                getOnFB();
                downloadCode();
                //alert(JSON.stringify(getOnFB()))
            }
        })
    }

    function downloadCode() {
        var postData = {'slug': $("#blogSlug").val()};
        AjaxCall(siteURL + 'blog/ajax-download-source-code', "POST", postData, "Json", "responseAccessCode");
    }

    function responseAccessCode(response) {
        if (response.payload != '') {
            var $_url = response.payload;
            $_url = $_url.replace(".git","/archive/master.zip");
            window.open($_url, "","width=400, height=200");
            $("#makingdifferenttimer").attr('href',$_url).hide();
            setTimer();
            //$.magnificPopup.close();
        } else {
            alert("No such blog found.")
        }
    }
    function downloadUser(postData) {
        //alert(JSON.stringify(postData));
        //var postData = {'name': data.name};
        AjaxCall(siteURL + 'socialLogin/download-user', "POST", postData, "Json", "responseDownloadUser",false);
    }

    function responseDownloadUser(response) {
        console.log(response);
    }
</script>
